{
  "name": "static-site-example",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "build": "node index",
    "serve": "npm run build & ./node_modules/browser-sync/bin/browser-sync.js start --config 'bs-config.dev.js'",
    "test": "./node_modules/karma/bin/karma start test/karma.conf.js",
    "test-e2e": "./node_modules/browser-sync/bin/browser-sync.js start --config 'test/bs-config.e2e.js' & node_modules/.bin/nightwatch --config test/nightwatch.conf.js",
    "lint-js": "eslint 'src/**/*.js'",
    "lint-css": "stylelint 'src/scss/**/*.scss' --syntax scss",
    "postinstall": "node test/nightwatch.conf.js",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "handlebars": "^4.0.5",
    "metalsmith": "^2.1.0",
    "metalsmith-beautify": "^0.1.0",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-filter": "^1.0.2",
    "metalsmith-html-minifier": "^2.2.0",
    "metalsmith-in-place": "^1.4.4",
    "metalsmith-layouts": "^1.4.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-rollup": "^0.2.0",
    "metalsmith-sass": "^1.3.0",
    "normalize-css": "^2.3.1"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-es2015": "^6.16.0",
    "browser-sync": "^2.17.5",
    "eslint": "^3.8.1",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-rollup-plugin": "^0.2.4",
    "nightwatch": "^0.9.8",
    "phantomjs": "^2.1.7",
    "rollup-plugin-babel": "^2.6.1",
    "selenium-download": "^2.0.6",
    "stylelint": "^7.6.0"
  }
}
